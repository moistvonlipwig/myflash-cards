<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.teliinc.myflash_cards.Activties.QuizCreateActivity">

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/quiz_title"
        android:hint="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/quiz_description"
        android:layout_below="@id/quiz_title"
        android:hint="Descrciption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/add_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="6dp"
        android:text="Add Questions"
        android:textColor="#000"
        android:layout_below="@id/quiz_description"
        android:layout_marginBottom="20dp"/>
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/question_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_questions"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/save_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_launcher"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="6dp"
        android:textAlignment="textEnd"
        android:text="Save"
        android:textColor="#000"
        android:layout_below="@id/question_list"/>
</RelativeLayout>
