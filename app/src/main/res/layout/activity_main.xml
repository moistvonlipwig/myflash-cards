<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    grid:alignmentMode="alignBounds"
    grid:columnCount="2">

    <android.support.v7.widget.CardView
        android:id="@+id/quiz_me"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        grid:layout_gravity="left|top"
        grid:layout_column="0"
        android:onClick="startQuiz">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView_login"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login" />

            <TextView
                android:id="@+id/textView_quiz"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:text="QuizMe"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/browse_cards"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="browseQuizzes"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        grid:layout_gravity="left|top"
        grid:layout_column="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView_browse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/browse" />

            <TextView
                android:id="@+id/textView_browse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="1dp"
                android:text="MyQuizzes"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_sections"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="openSettings"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        grid:layout_gravity="left|top"
        grid:layout_column="0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView_section"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/textView_section"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/create_cards"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="createQuiz"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        grid:layout_gravity="left|top"
        grid:layout_column="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView_create"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/create" />

            <TextView
                android:id="@+id/textView_create"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:text="MakeQuiz"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.GridLayout>
