<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="1dp"
    android:background="#c8e6c9">
    <android.support.v7.widget.CardView
        android:id="@+id/my_cards"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="5dp"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView_login"
                android:scaleType="centerCrop"
                android:src="@drawable/login"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Login"
                android:id="@+id/textView_login"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/browse_cards"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_toRightOf="@id/my_cards"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="5dp"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView_browse"
                android:scaleType="centerCrop"
                android:src="@drawable/browse"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Browse"
                android:id="@+id/textView_browse"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_sections"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_toRightOf="@id/browse_cards"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="0dp"
        android:onClick="openSettings"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView_section"
                android:scaleType="centerCrop"
                android:src="@drawable/settings"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Settings"
                android:id="@+id/textView_section"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/create_cards"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_toRightOf="@id/card_sections"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="5dp"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView_create"
                android:scaleType="centerCrop"
                android:src="@drawable/create"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Create"
                android:id="@+id/textView_create"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>