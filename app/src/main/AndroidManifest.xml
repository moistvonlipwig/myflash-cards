<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.teliinc.myflash_cards"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme" >
        <activity android:name=".Activties.MainActivity" />
        <activity android:name=".Activties.SettingsActivity" />
        <activity android:name=".Activties.LaunchScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activties.CreateCardActivity" />
        <activity android:name=".Activties.CreateCardActivityAnswer" />
        <activity android:name=".Activties.BrowseCards" />
        <activity android:name=".Activties.DisplayCardActivity" />
        <activity android:name=".Activties.BrowseTags" />
    </application>

</manifest>
